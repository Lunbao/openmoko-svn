

# call history list item style
style "call_history_item"
{
  GtkTreeView::allow-rules = 1
  GtkTreeView::expander_size = 47
  
  text[NORMAL]      = "#ffffff"
  text[SELECTED]    = "#ffffff"
  
  base[NORMAL]  = "#666666"
  
  engine "pixmap" {
    image
      {
        function        = FLAT_BOX
        recolorable     = TRUE
        state           = SELECTED
        file            = "highlight_bar_type01.png"
        border          = { 0, 0, 0, 0 }
        stretch         = TRUE
      }
    image
      {
        function        = FLAT_BOX
        recolorable     = TRUE
#        state           = NORMAL
        file            = "bg_list_type01.png"
        border          = { 0, 0, 0, 0 }
        stretch         = TRUE
      }
      
      
  }
}

style "treeview_navigation_list"
{

  GtkTreeView::allow_rules = 1
  GtkTreeView::vertical_separator = 6
  GtkTreeView::even_row_color = "#f2f2f2"
  GtkTreeView::odd_row_color = "#f8f8f8"
  GtkTreeView::expander_size = 30

  
  text[NORMAL]      = "#999999"
  text[SELECTED]    = "#ffffff"
  text[ACTIVE]      = "#ffffff"
  text[INSENSITIVE] = "#ffffff"
  text[PRELIGHT]    = "#ffffff"
  
  font_name = "Sans 13"
  
  engine "pixmap" {
