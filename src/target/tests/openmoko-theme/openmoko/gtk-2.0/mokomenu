style "menuitem"
{
#   bg[NORMAL]        = "#c4d2ca"
  
  engine "pixmap" {
    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = PRELIGHT
        file            = "bg_menu_selected.png"
        border          = { 8, 8, 8, 8 }
        stretch         = TRUE
      }
      
  }
}

class "GtkMenuItem" style "menuitem"


