{
#  bg[NORMAL]        = "#c4d2ca"
  
  engine "pixmap" {
    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = PRELIGHT
        file            = "highlight_bar_type03.png"
        border          = { 8, 8, 8, 8 }
        stretch         = TRUE
      }
      
  }
}
