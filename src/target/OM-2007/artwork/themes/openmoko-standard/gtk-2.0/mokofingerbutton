style "mokofingerbutton-orange" {
   engine "pixmap" {
        image {
            function        = BOX
            state           = NORMAL
            file            = "btn_type01.png"
            border          = { 17, 17, 17, 17 }
            stretch         = TRUE
        }
        image {
            function        = BOX
            state           = PRELIGHT
            file            = "btn_type01.png"
            border          = { 17, 17, 17, 17 }
            stretch         = TRUE
        }
        image {
            function        = BOX
            state           = ACTIVE
            file            = "btn_type01_p.png"
            border          = { 17, 17, 17, 17 }
            stretch         = TRUE
        }
    }
    xthickness = 10
    ythickness = 10
    GtkButton::focus-line-width = 0
}
widget "*.mokofingerbutton-orange" style "mokofingerbutton-orange"

