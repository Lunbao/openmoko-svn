        stretch         = TRUE
      }
    image
      {
        function        = BOX
        state           = PRELIGHT
        file            = "main_menu_sel_icon.png"
        stretch         = TRUE
      }
    image
      {
        function        = BOX
        state           = ACTIVE
        file            = "main_menu_sel_icon.png"
        stretch         = TRUE
      }

   }
}
