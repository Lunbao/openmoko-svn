style "gtkentry" {
    engine "pixmap" {
        image {
            function        = FLAT_BOX
            file            = "gtkentry.png"
            recolorable     = TRUE
            border          = { 17, 17, 15, 15 }
        }
    }
    
    GtkEntry::inner-border  = { 17, 17, 5, 5 }

    text[NORMAL] = "#000000"
    fg[NORMAL] = "#000000"
}
class "GtkEntry" style "gtkentry"
widget_class "*.GtkEntry*" style "gtkentry"
