style "gtkmenuitem" {
   engine "pixmap" {
        image {
            function        = BOX
            recolorable     = TRUE
            state           = NORMAL
            file            = "transparency100.png"
            border          = { 0, 0, 0, 0 }
            stretch         = TRUE
        }
        image {
            function        = BOX
            recolorable     = TRUE
            state           = PRELIGHT
            file            = "gtkmenuitem-selected.png"
            border          = { 11, 11, 11, 11 }
            stretch         = TRUE
        }
    }
}
class "GtkMenuItem" style "gtkmenuitem"

style "gtkmenuitem-label" {
    font_name = "Vera Sans 13"
    fg[NORMAL] = "#e5e5e5"
    fg[PRELIGHT] = "#ffffff"
}
widget "*.GtkMenuItem.*" style "gtkmenuitem-label"
widget "*.GtkImageMenuItem.*" style "gtkmenuitem-label"

class "GtkMenuItem" style "gtkmenuitem-label"

class "GtkCellView" style "gtkmenuitem-label"

