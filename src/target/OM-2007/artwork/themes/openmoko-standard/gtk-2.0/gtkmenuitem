style "gtkmenuitem" {
   engine "pixmap" {
        image {
            function        = BOX
            recolorable     = TRUE
            file            = "transparency100.png"
            border          = { 0, 0, 0, 0 }
            stretch         = TRUE
        }
    }
}
class "GtkMenuItem" style "gtkmenuitem"

style "gtkmenuitem-label" {
    font_name = "Vera Sans 16"
    fg[NORMAL] = "#ffffff"
    fg[PRELIGHT] = "#ffffff"
    xthickness = 100
}
widget "*.GtkMenuItem.GtkAccelLabel" style "gtkmenuitem-label"
widget "*.GtkImageMenuItem.GtkAccelLabel" style "gtkmenuitem-label"
