      image {
            function        = FLAT_BOX
            recolorable     = TRUE
            state           = NORMAL
            file            = "entry-background.png"
            border          = { 0, 0, 0, 0 }
            stretch         = TRUE
      }
      image {
            function        = FLAT_BOX
            recolorable     = TRUE
            state           = SELECTED
            file            = "list_bg_row_sel_stretch.png"
            border          = { 0, 0, 0, 0 }
            stretch         = TRUE
      }
