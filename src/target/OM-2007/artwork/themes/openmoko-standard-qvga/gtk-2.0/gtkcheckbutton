style "gtkcheckbutton" {
    engine "pixmap" {
        image {
            function        = CHECK
            state           = NORMAL
            recolorable     = TRUE
            shadow          = OUT
            overlay_file    = "checkbutton_off.png"
            overlay_stretch = TRUE
        }
        image {
            function        = CHECK
            state           = PRELIGHT
            recolorable     = TRUE
            shadow          = OUT
            overlay_file    = "checkbutton_off.png"
            overlay_stretch = TRUE
        }
        image {
            function        = CHECK
            state           = ACTIVE
            recolorable     = TRUE
            shadow          = OUT
            overlay_file    = "checkbutton_off.png"
            overlay_stretch = TRUE
        }
        image {
            function        = CHECK
            state           = INSENSITIVE
            recolorable     = TRUE
            shadow          = OUT
            overlay_file    = "checkbutton_off_disable.png"
            overlay_stretch = TRUE
        }
        image {
            function        = CHECK
            state           = NORMAL
            recolorable     = TRUE
            shadow          = IN
            overlay_file    = "checkbutton_on.png"
            overlay_stretch = TRUE
        }
        image {
            function        = CHECK
            state           = PRELIGHT
            recolorable     = TRUE
            shadow          = IN
            overlay_file    = "checkbutton_on.png"
            overlay_stretch = TRUE
        }
        image {
            function        = CHECK
            state           = ACTIVE
            recolorable     = TRUE
            shadow          = IN
            overlay_file    = "checkbutton_on.png"
            overlay_stretch = TRUE
        }
        image {
            function        = CHECK
            state           = INSENSITIVE
            recolorable     = TRUE
            shadow          = IN
            overlay_file    = "checkbutton_on_disable.png"
            overlay_stretch = TRUE
        }
#
# check button flat box
#
        image {
            function        = FLAT_BOX
            recolorable     = TRUE
            file            = "transparency100.png"
            border          = { 5,2,2,5 }
            stretch         = TRUE
        }
    }
    GtkCheckButton::indicator-size = 17
    GtkCheckButton::indicator-spacing = 2
}
class "GtkCheckButton" style "gtkcheckbutton"

style "gtkcheckbutton-label"
{
    font_name = "Vera Sans 7"
    fg[NORMAL] = "#cccccc"
    fg[PRELIGHT] = "#eeeeee"
}
widget_class "*.GtkCheckButton.GtkLabel" style "gtkcheckbutton-label"
