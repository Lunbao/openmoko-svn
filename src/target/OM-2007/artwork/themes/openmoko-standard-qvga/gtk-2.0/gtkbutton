style "gtkbutton" {
   engine "pixmap" {
        image {
            function        = BOX
            recolorable     = TRUE
            state           = NORMAL
            file            = "gtkbutton.png"
            border          = { 11, 16, 9, 12 }
            stretch         = TRUE
        }
        image {
            function        = BOX
            recolorable     = TRUE
            state           = PRELIGHT
            file            = "gtkbutton.png"
            border          = { 11, 16, 9, 12 }
            stretch         = TRUE
        }
        image {
            function        = BOX
            recolorable     = TRUE
            state           = ACTIVE
            file            = "gtkbutton_p.png"
            border          = { 11, 16, 9, 12 }
            stretch         = TRUE
        }
    }
    xthickness = 11
    ythickness = 5
    GtkButton::focus-line-width = 0
}
class "GtkButton" style "gtkbutton"

style "gtkbutton-label" {
    font_name = "Vera Sans 5"
    fg[NORMAL] = "#e5e5e5"
    fg[PRELIGHT] = "#ffffff"
}
widget "*.GtkButton.*" style "gtkbutton-label"
