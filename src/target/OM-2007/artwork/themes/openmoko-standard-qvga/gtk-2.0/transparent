style "transparent" {
   engine "pixmap" {
        image {
            function        = BOX
            recolorable     = TRUE
            # state = ALL
            file            = "transparency100.png"
            border          = { 0, 0, 0, 0 }
            stretch         = TRUE
        }
        image {
            function        = FLAT_BOX
            recolorable     = TRUE
            # state = ALL
            file            = "transparency100.png"
            border          = { 0, 0, 0, 0 }
            stretch         = TRUE
        }

    }
}
widget "*.transparent" style "transparent"

