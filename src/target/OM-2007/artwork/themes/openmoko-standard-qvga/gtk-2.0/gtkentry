style "gtkentry" {
    xthickness = 6
    ythickness = 2
    engine "pixmap" {
        image {
            function        = SHADOW
            shadow          = IN
            file            = "gtkentry.png"
            recolorable     = TRUE
            border          = { 8, 8, 7, 7 }
              }
	 }
    GtkEntry::inner-border  = { 0, 0, 0, 0 }
    text[NORMAL] = "#000000"
    base[NORMAL] = "#B2B2B2"
    fg[NORMAL] = "#000000"
    text[INSENSITIVE] = "#223344" # dark grey
}
class "GtkEntry" style "gtkentry"
widget_class "*.GtkEntry*" style "gtkentry"
