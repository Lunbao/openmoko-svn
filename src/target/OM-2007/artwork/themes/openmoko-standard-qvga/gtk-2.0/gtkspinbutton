#FIXME looks ugly, needs styling

style "gtkspinbutton" {
    bg_pixmap[NORMAL] = "<none>"
    bg[NORMAL] = "#555555"
    base[NORMAL] = "#B2B2B2"
    text[NORMAL] = "#000000"

    bg[ACTIVE] = "#fdfdfd"
    base[ACTIVE] = "#fdfdfd"
    fg[ACTIVE] = "#ffffff"

    GtkSpinButton::shadow_type = GTK_SHADOW_NONE
    
    engine "pixmap" {
        image {
            function        = BOX
#            detail          = "spinbutton_up"
            state           = NORMAL
            file            = "gtkspinbutton.png"
            stretch         = TRUE
        }
        image {
            function        = BOX
            state           = PRELIGHT
            file            = "gtkspinbutton-pressed.png"
            stretch         = TRUE
        }
        image {
            function        = BOX
            state           = INSENSITIVE
            file            = "gtkspinbutton-pressed.png"
            stretch         = TRUE
        }
        
        image   
        {
            function        = ARROW 
            recolorable     = TRUE  
            overlay_file    = "gtkspinbutton-plus.png"
            overlay_border  = { 0, 0, 0, 0 }
            overlay_stretch = FALSE 
            arrow_direction = UP
        }
        image   
        {
            function        = ARROW 
            recolorable     = TRUE  
            overlay_file    = "gtkspinbutton-minus.png"
            overlay_border  = { 0, 0, 0, 0 }
            overlay_stretch = FALSE 
            arrow_direction = DOWN
        }
    }
}
class "GtkSpinButton" style "gtkspinbutton"
widget_class "*.GtkSpinButton" style "gtkspinbutton"

