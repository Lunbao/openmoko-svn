style "checkradiobutton" {

  engine "pixmap" {
    image
      {
        function        = CHECK
        state           = NORMAL
        recolorable     = TRUE
        shadow          = OUT
        overlay_file    = "checkbox_off.png"
        overlay_stretch = TRUE
      }

    image
      {
        function        = CHECK
        state           = PRELIGHT
        recolorable     = TRUE
        shadow          = OUT
        overlay_file    = "checkbox_off.png"
        overlay_stretch = TRUE
      }

    image
     {
        function        = CHECK
        state           = ACTIVE
        recolorable     = TRUE
        shadow          = OUT
        overlay_file    = "checkbox_off.png"
        overlay_stretch = TRUE
     }

    image
      {
        function        = CHECK
        state           = INSENSITIVE
        recolorable     = TRUE
        shadow          = OUT
        overlay_file    = "checkbox_off_disable.png"
        overlay_stretch = TRUE
      }

      
    image
      {
        function        = CHECK
        state           = NORMAL
        recolorable     = TRUE
        shadow          = IN
        overlay_file    = "checkbox_on.png"
        overlay_stretch = TRUE
      }
    image
      {
        function        = CHECK
        state           = PRELIGHT
        recolorable     = TRUE
        shadow          = IN
        overlay_file    = "checkbox_on.png"
        overlay_stretch = TRUE
      }
    image
     {
        function        = CHECK
        state           = ACTIVE
        recolorable     = TRUE
        shadow          = IN
        overlay_file    = "checkbox_on.png"
        overlay_stretch = TRUE
     }
      
    image
      {
        function        = CHECK
        state           = INSENSITIVE
        recolorable     = TRUE
        shadow          = IN
        overlay_file    = "checkbox_on_disable.png"
        overlay_stretch = TRUE
      }



  
