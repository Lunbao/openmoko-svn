

# Normal button for stylus application
style "button"
{

  fg[NORMAL]        = "#ffffff"
  fg[ACTIVE]        = "#ffffff"

  engine "pixmap"
    {

    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = NORMAL
        file            = "btn_toolbar_action.png"
        border          = { 9,9,9,9 }
        stretch         = TRUE
      }
    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = PRELIGHT
        file            = "btn_toolbar_action.png"
        border          = { 9,9,9,9 }
        stretch         = TRUE
      }
    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = ACTIVE
        file            = "btn_toolbar_action_p.png"
        border          = { 9,9,9,9 }
        stretch         = TRUE
      }

   }
}

