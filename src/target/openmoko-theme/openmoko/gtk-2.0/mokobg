
# set window background,works ok for notebook,button background
style "window"
{

  engine "pixmap" {
    image
      {
        function        = FLAT_BOX
        recolorable     = TRUE
        file            = "bg_dialer.png"
        stretch         = TRUE
      }
  }
}
class "GtkWindow" style "window"

style "bg_dialer"
{

  engine "pixmap" {
    image
      {
        function        = FLAT_BOX
        recolorable     = TRUE
        file            = "bg_dialer.png"
        stretch         = TRUE
      }
  }
}
widget "bg_dialer" style "bg_dialer"

