    {
    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = NORMAL
        file            = "scroll_fullscreen_btn_off.png"
        stretch         = TRUE
      }
    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = PRELIGHT
        file            = "scroll_fullscreen_btn_off.png"
        stretch         = TRUE
      }
    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = ACTIVE
        file            = "scroll_fullscreen_btn_off_p.png"
        stretch         = TRUE
      }
   }
}

widget "*scroll_fullscreen_btn_on"     style "scroll_fullscreen_btn_on"
widget "*scroll_fullscreen_btn_off"    style "scroll_fullscreen_btn_off"
