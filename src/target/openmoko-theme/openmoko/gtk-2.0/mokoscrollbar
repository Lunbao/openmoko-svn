      }
    image
      {
        function			= ARROW
        recolorable		= TRUE
        overlay_file		= "arrow_right.png"
        overlay_border	= { 0, 0, 0, 0 }
        overlay_stretch	= TRUE
        arrow_direction	= RIGHT
      }
      
  }
