class "GtkScrollbar" style "scrollbar"



style "scroll_fullscreen_btn_on"
{
  engine "pixmap"
    {
    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = NORMAL
        file            = "scroll_fullscreen_btn_on.png"
        stretch         = TRUE
      }
    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = PRELIGHT
        file            = "scroll_fullscreen_btn_on.png"
        stretch         = TRUE
      }
    image
      {
        function        = BOX
        recolorable     = TRUE
        state           = ACTIVE
        file            = "scroll_fullscreen_btn_on_p.png"
        stretch         = TRUE
      }
   }
}

