style "gtkmenuitem" {
   engine "pixmap" {
        image {
            function        = BOX
            state           = NORMAL
            file            = "transparency100.png"
            border          = { 0, 0, 0, 0 }
            stretch         = TRUE
        }
        image {
            function        = BOX
            state           = PRELIGHT
            file            = "menu/menuitem-selected.png"
            border          = { 5, 5, 5, 5 }
            stretch         = TRUE
        }
    }
    xthickness = 5
    ythickness = 5
    fg[PRELIGHT] = "#000000"
}
class "GtkMenuItem" style "gtkmenuitem"
