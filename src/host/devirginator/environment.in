#
# environment.in - The default environment
#

bootargs_base=
  rootfstype=jffs2
  root=/dev/mtdblock4
  console=ttySAC0,115200
  console=tty0
  loglevel=8
  regular_boot

bootcmd=
  setenv bootargs ${bootargs_base} ${mtdparts};
  nand read.e 0x32000000 kernel;
  bootm 0x32000000

bootdelay=1

quiet=1

splashimage=
  nand read.e 0x32000000 splash 0x5000;
  unzip 0x32000000 0x33d00000 0x96000

stdout=usbtty
stderr=usbtty
stdin=usbtty

sd_image_name=uImage

menu_1=
  Boot from microSD:
  setenv bootargs
    ${bootargs_base} rootfstype=ext2 rootfs=/dev/mmcblk0p1 rootdelay=5
    ${mtdparts};
  mmcinit;
  ext2load mmc 0 0x32000000 /boot/${sd_image_name};
  bootm 0x32000000

menu_2=
  Set console to USB:
  setenv stdin usbtty;
  setenv stdout usbtty;
  setenv stderr usbtty

menu_3=
  Set console to serial:
  setenv stdin serial;
  setenv stdout serial;
  setenv stderr serial

menu_4=
  Power off:
  neo1973 power-off
