#  setenv bootargs rootfstype=
#  mmcinit;
#  ext2load mmc 0 0x32000000 uImage;
#  bootm 0x32000000

menu_1=
  Set console to USB:
  setenv stdin usbtty;
  setenv stdout usbtty;
  setenv stderr usbtty

menu_2=
  Set console to serial:
  setenv stdin serial;
  setenv stdout serial;
  setenv stderr serial

menu_3=
  Power off:
  neo1973 power-off
